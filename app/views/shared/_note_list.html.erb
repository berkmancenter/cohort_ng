<% unless title.blank? %>
  <h1><%= title %></h1>
<% end %>
<% unless @notes.blank? %>
  <ul class="resultlist">
    <% @notes.each do |n| %>
      <li class="note-<%= n.id %>">
      <% unless current_user.blank? %>
        <a href="#" class="control" id="note-control-<%= n.id %>"><%= icon('cog') %></a>
      <% end %>
      <%= link_to(truncate(n.note,:length => 60, :separator => ' '),n, :class => 'dialog-show') %> on 
	  <% unless n.contact.nil? || n.contact.blank? %>
	    <%= link_to(n.contact, contact_path(n.contact), :class => 'dialog-show') %>
	  <% else %>
	    Nobody
	  <% end %>		
      <% unless current_user.blank? %>
        <span id="note-control-<%= n.id %>-target" style="display: none;"><%= link_to(icon('note_edit') + ' Edit note', edit_note_path(n),:class => 'dialog-form', :title => 'Edit note') %><br/><%= link_to(icon('note_delete') + ' Delete note',note_path(n), :method => :delete, :title => 'Delete note', :class => 'delete delete-note') %></span>
      <% end %>
	  
      <% unless current_user.blank? %>
        <span style="font-size: .70em; margin-left: 5px;">
		  <%= link_to(icon('note_edit') + ' Edit', edit_note_path(n),:class => 'dialog-form', :title => 'Edit note') %>
		  <%= link_to(icon('note_delete') + ' Delete',note_path(n), :method => :delete, :title => 'Delete note', :class => 'delete delete-note') %></span>
      <% end %>
      </li>
    <% end %>
  </ul>
  <%= will_paginate(@notes) %>
<% else %>
  <h2>None found.</h2>
<% end %>
