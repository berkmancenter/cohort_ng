<h2>Tag: 
<% tree = [] %>
<% @tag.ancestry.nil? ? tree << @tag.id : tree = @tag.ancestry.split("/").collect{|t| t.to_i} << @tag.id %>
<% tree.each do |t| %>
  "<%= link_to(ActsAsTaggableOn::Tag.find(t).name, tag_path(t)) %>" 
  <% unless tree.last == t %>
    ->
  <% end %>	
<% end %>
</h2>

<div class="grid_8 alpha">
  <div class="tabs">
    <ul>	
      <li><%= link_to('Contacts', url_for(:controller => :contact_query, :action => :tag_contacts, :id => @tag.id)) %></li>
	  <li><%= link_to 'Related Tags', related_tag_path(@tag) %></li>
	  <li><%= link_to 'Tools', controls_tag_path(@tag) %></li>
    </ul>
  </div>
</div>
